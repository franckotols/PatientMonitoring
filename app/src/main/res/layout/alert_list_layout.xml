<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Letto!"
        android:id="@+id/cb_read"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:checked="false"
        android:layout_alignBaseline="@+id/tv_pat_name"
        android:layout_alignBottom="@+id/tv_pat_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/space1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Paziente:"
        android:id="@+id/textView11"
        android:layout_below="@+id/space1"
        android:layout_alignLeft="@+id/space1"
        android:layout_alignStart="@+id/space1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/space2"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Data:"
        android:id="@+id/textView13"
        android:layout_below="@+id/space2"
        android:layout_alignLeft="@+id/space2"
        android:layout_alignStart="@+id/space2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/space3"
        android:layout_below="@+id/textView13"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tipo:"
        android:id="@+id/textView15"
        android:layout_below="@+id/space3"
        android:layout_alignLeft="@+id/space3"
        android:layout_alignStart="@+id/space3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/space4"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Messaggio:"
        android:id="@+id/tv_message"
        android:layout_below="@+id/space4"
        android:layout_alignLeft="@+id/space4"
        android:layout_alignStart="@+id/space4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/space5"
        android:layout_below="@+id/tv_message"
        android:layout_alignLeft="@+id/tv_message"
        android:layout_alignStart="@+id/tv_message"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_pat_name"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toRightOf="@+id/tv_message"
        android:layout_toEndOf="@+id/tv_message"
        android:layout_marginLeft="102dp"
        android:layout_marginStart="102dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_date"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignLeft="@+id/tv_pat_name"
        android:layout_alignStart="@+id/tv_pat_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_type"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignLeft="@+id/tv_date"
        android:layout_alignStart="@+id/tv_date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView22"
        android:layout_alignTop="@+id/tv_message"
        android:layout_alignLeft="@+id/tv_type"
        android:layout_alignStart="@+id/tv_type"/>

</RelativeLayout>