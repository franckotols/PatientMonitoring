<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.francesco.patientmonitoring">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings">
        </activity>
        <activity
            android:name=".VisualizzaRiepilogo"
            android:label="@string/title_activity_visualizza_riepilogo"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Notifiche"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".RicercaPaziente"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Altro"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".HomePaziente"
            android:label="@string/home_label">
        </activity>
        <activity android:name=".ParametriActivity"
            android:label="@string/label_parametri"
            android:parentActivityName=".HomePaziente">
        </activity>
        <activity android:name=".DiarioMedico">
        </activity>
        <activity android:name=".EsamiSangue">
        </activity>
    </application>

</manifest>